    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach by Process ID",
            "sourceMaps": true,
            "processId": "${command:PickProcess}"
        },
        {
            "type": "node",
            "request": "attach",
            "protocol": "legacy",
            "name": "Attach",
            "port": 3000
        },
    {
        "type": "node",
        "request": "launch",
        "name": "Launch via NPM",
        "runtimeExecutable": "npm",
        "protocol": "legacy",
        "runtimeArgs": [
            "run",
            "dev-debug"
        ],
        "port": 3000
    },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}\\start"
        }
    ]
}